<!DOCTYPE html>
<html>
<head>
<title>Music Harmoney</title>
<%= erb "layout/file_include".to_sym%>
</head>

<body>
  <div id="container" class="normal">
    <% if flash[:notice]  %>
      <div class="alert alert-error">
        <p class="text-danger"><%= flash[:notice] %></p>
      </div>
    <% end %>

    <div id="header">
      <%= erb 'layout/header'.to_sym %>
    </div>

    
    <div id="content" class="middleArea">
      <%= yield %>
    </div>

    <div id="footer">
    </div>
  </div>
</body>
</html>